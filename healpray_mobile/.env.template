# HealPray Environment Configuration Template
# Copy this file to .env and fill in your actual API keys

# App Configuration
APP_NAME=HealPray
APP_VERSION=1.0.0
ENVIRONMENT=development

# Firebase Configuration (Fill these after Firebase setup)
FIREBASE_PROJECT_ID=healpray-dev
FIREBASE_WEB_API_KEY=your_firebase_web_api_key_here
FIREBASE_APP_ID_ANDROID=your_android_app_id_here
FIREBASE_APP_ID_IOS=your_ios_app_id_here
FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here

# AI Service Keys (Get these from respective platforms)
# OpenAI API Key - Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API Key - Get from: https://makersuite.google.com/app/apikey  
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Anthropic Claude API Key - Get from: https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Development Settings
DEBUG_MODE=true
ENABLE_LOGGING=true
MOCK_AI_RESPONSES=false
SKIP_ONBOARDING=false
ENABLE_ANALYTICS=true

# Crisis Support Settings
ENABLE_CRISIS_DETECTION=true
CRISIS_TEXT_LINE_API=your_crisis_api_key_here
SUICIDE_PREVENTION_API=your_prevention_api_key_here

# Third-Party Integrations (Optional)
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key_here

# Analytics (Optional)
MIXPANEL_TOKEN=your_mixpanel_token_here
AMPLITUDE_API_KEY=your_amplitude_api_key_here

# Push Notifications (Optional)
ONESIGNAL_APP_ID=your_onesignal_app_id_here
